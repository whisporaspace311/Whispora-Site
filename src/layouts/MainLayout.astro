---
// src/layouts/MainLayout.astro
import '../styles/global.css'; // Import Tailwind's base styles

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Whispora Space - Where Stories Come to Life',
  description = 'A magical place for children to explore stories, songs, history, and more.',
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-purple-200 via-pink-200 to-orange-200 text-gray-800 font-sans">
    <header class="bg-white/80 backdrop-blur-md shadow-md sticky top-0 z-50">
      <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-purple-600 hover:text-purple-800">
          Whispora
        </a>
        <div>
          <a href="/stories" class="text-gray-700 hover:text-purple-600 px-3">Stories</a>
          <a href="/songs" class="text-gray-700 hover:text-purple-600 px-3">Songs</a>
          <a href="/learn" class="text-gray-700 hover:text-purple-600 px-3">Learn</a>
        </div>
      </nav>
    </header>

    <main class="container mx-auto p-6">
      <slot /> </main>

    <footer class="bg-gray-700 text-white text-center p-6 mt-10">
      <p>&copy; {new Date().getFullYear()} Whispora Space. All rights reserved.</p>
      <p>A safe haven for young explorers.</p>
    </footer>
  </body>
</html>
